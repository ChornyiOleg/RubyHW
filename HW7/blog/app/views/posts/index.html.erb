<div class="container">
<p id="notice" class="text-center my-3 fs-3 text-secondary" id="notice"><%= notice %></p>

<h1 class="container text-center">Posts</h1>

  <div class="table-responsive">
    <table class="table table-striped table-hover table-sm">
      <thead>
        <tr>
          <th>Author</th>
          <th>Title</th>
          <th>Content</th>
          <th>Image</th>
          <th scope="col">Actions</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @posts.each do |post| %>
          <tr>
            <td><%= post.author.full_name %></td>
            <td><%= post.title %></td>
            <td><%= post.content %></td>
            <td><%= image_tag(post.image, width: '200', class: "mx-auto d-block") %></td>
            <td><%= link_to 'Show', post %></td>
            <td><%= link_to 'Edit', edit_post_path(post) %></td>
            <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<br>
  <div class="d-flex justify-content-center d-flex align-items-center">
    <%= link_to 'New Post', new_post_path, class: "btn btn-success btn-lg" %>
  </div>
<hr>
</div>