<%= form_with model: [@post, @post.comments.build], local: false, class: "comment-form" do |form| %>

  <div class="field py-2">
    <%= form.text_area :body, class: "form-control", placeholder: "Enter your comment here..." %>
  </div>

  <%= form.hidden_field :parent_id, value: params[:comment_id] if params[:comment_id].present? %>

  <div class="btn btn-primary">
    <%= form.select(:status, [['Unpublished', :unpublished], ['Published', :published]], class: "btn btn-success") %>
  </div>

  <div class="actions py-2">
    <%= form.submit(class: "btn btn-success") %>
  </div>
<% end %>
