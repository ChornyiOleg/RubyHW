<%= form_with model: [ @post, @post.comments.build ] do |form| %>
  <p>
   <strong class="mr-3">
      <%= form.label :author, class: "form-label" %>
      <%= form.select :author_id, Author.all.collect { |a| [a.full_name, a.id] }, class: "form-select" %>
   </strong>
  </p>

  <div class="field py-2">
    <%= form.text_area :body, class: "form-control", placeholder: "Enter your comment here..." %>
  </div>
  <div class="actions py-2">
    <%= form.submit(class: "btn btn-success") %>
  </div>
<% end %>

