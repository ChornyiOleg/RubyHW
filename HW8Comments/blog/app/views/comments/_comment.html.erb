<% comment.status == "unpublished" %>
<div id="comment-<%= comment.id %>" class="comment mb-3">
  <div class="comment-header d-flex justify-content-between">
    <strong class="mr-3">
       <%= comment.author.first_name %> <%= comment.author.last_name %>
    </strong>
  </div>

  <div class="d-block p-3">
    <p><%= comment.body %></p>
  </div>

  <p class="text-right fst-italic">
    Comment created <%= distance_of_time_in_words(comment.created_at, Time.now) %> ago
  </p>

  <p><%= comment.status %> </p>

    <% if comment.status == 'unpublished' %>
    <div class='btn btn-info'>
      <%= link_to 'Publish Comment', post_comment_path(comment.post, comment), method: :patch %>
    </div>
    <% end %>

  <hr>
</div>
